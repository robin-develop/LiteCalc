        xmlns:local="clr-namespace:LiteCalc"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="LiteCalc.MainWindow"
        mc:Ignorable="d"
        Title="LiteCalc - Stone Studio" Height="450" Width="800" Background="#FF202020">
